{
    "compilerOptions": {
      "target": "ES2022",
      "outDir": "./dist/js/",
      "noEmitOnError": true,
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": ["node"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "strictNullChecks": true
    },
    "include": [
      "./*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  