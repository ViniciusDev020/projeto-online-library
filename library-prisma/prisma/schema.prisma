generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @db.VarChar(36)  @id @default(uuid())
  email    String   @unique
  name     String
  password String?
}

model Livro {
  id            String  @db.VarChar(36)  @id @default(uuid())
  name          String
  description   String
}